@model Comment

@{
    ViewData["Title"] = "Delete Comment";
}

<h2>Delete Comment</h2>

<h3>Are you sure you want to delete this comment?</h3>
<div>
    <h4>@Model.Content</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
    </dl>

    <form asp-action="DeleteComment" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="AdminPanel" class="btn btn-secondary">Cancel</a>
    </form>
</div>
