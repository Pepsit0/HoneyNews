@model NewsArticle

@{
    ViewData["Title"] = "Delete News";
}

<h2>Delete News</h2>

<h3>Are you sure you want to delete this news?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
        <dt class="col-sm-2">
            Publication Date
        </dt>
        <dd class="col-sm-10">
            @Model.PublicationDate
        </dd>
    </dl>

    <form asp-action="DeleteNews" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="AdminPanel" class="btn btn-secondary">Cancel</a>
    </form>
</div>
