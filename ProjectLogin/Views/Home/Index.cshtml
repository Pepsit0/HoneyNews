@model IEnumerable<NewsArticle>

@{
    ViewBag.Title = "Latest News Articles";
}

<div class="container">
    <h2>Latest News Articles</h2>
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="@Url.Action("Details", "Home", new { id = article.Id })">@article.Title</a>
                        </h5>
                        <p class="card-text">@article.Preview</p>
                        <a href="@Url.Action("Details", "Home", new { id = article.Id })" class="btn btn-primary">Read More</a>
                    </div>
                    <div class="card-footer text-muted">
                        Published on @article.PublicationDate.ToString("MM/dd/yyyy")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

